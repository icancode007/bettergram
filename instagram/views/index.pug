extends layout

block content
  .row.main-section
    .col-md-6.d-flex.justify-content-end
      img(src='images/iphone.png', height='600', width='400')
    .col-md-6.d-flex.justify-content-start
      .form-area
        img(src='images/logo.png', height='80', width='150')
        p.sign-up Sign up to see photos and videos from your friends.
        button.signup-button Log in with Facebook
        p.formcont
          form.signup-form
            .form-group
              input.sign-up-field#InputEmail.form-control(type='email', placeholder='Mobile Number or Email')
            .form-group
              input.sign-up-field#Inputfirstname.form-control(type='text', placeholder='First Name')
            .form-group
              input.sign-up-field#Inputlastname.form-control(type='text', placeholder='Last Name')
            .form-group
              input.sign-up-field#exampleInputPassword1.form-control(type='password', placeholder='Password')
            button.signup-button(type='submit') Sign Up

  .row
    .col-md-12.d-flex.justify-content-center
      ul.nav.footer
        li.nav-item
          a.nav-link(href='#') ABOUT US
        li.nav-item
          a.nav-link(href='#') SUPPORT
        li.nav-item
          a.nav-link(href='#') BLOG
        li.nav-item
          a.nav-link(href='#') PRESS
        li.nav-item
          a.nav-link(href='#') API
        li.nav-item
          a.nav-link(href='#') JOBS
        li.nav-item
          a.nav-link(href='#') PRIVACY
        li.nav-item
          a.nav-link(href='#') TERMS
        li.nav-item
